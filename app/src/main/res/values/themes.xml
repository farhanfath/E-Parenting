<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EParenting" parent="Theme.Material3.Light.NoActionBar">

    <!-- uncomment jika ingin mengubah transisi ke fade in fade out -->
<!--        <item name="android:windowAnimationStyle">@style/ActivityFadeTransition</item>-->

        <item name="android:statusBarColor">@color/green_500</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Warna latar belakang tombol -->
        <item name="android:colorButtonNormal">@color/green_500</item>
        <!-- Warna tombol ketika diklik -->
        <item name="colorPrimary">@color/green_500</item>
        <!-- Warna tombol saat ditekan -->
        <item name="colorPrimaryVariant">@color/green_500</item>

        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
    </style>

    <style name="ActivityFadeTransition">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="Theme.EParenting" parent="Base.Theme.EParenting" />

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">#316153</item>
        <item name="colorOnContainer">@color/white</item>
    </style>
</resources>