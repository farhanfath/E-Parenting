<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_photo_detail_post_forum"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundImageview"
            tools:src="@tools:sample/backgrounds/scenic" />

        <ImageButton
            android:id="@+id/imb_back_detail_post_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/circle_background_back"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_headline_topic_detail_post_forum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Headline Topic"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imb_back_detail_post_forum"
            app:layout_constraintStart_toEndOf="@id/imb_back_detail_post_forum"
            app:layout_constraintTop_toTopOf="@id/imb_back_detail_post_forum" />

        <TextView
            android:id="@+id/tv_desc_detail_post_forum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="Deskripsi Postingan Forum"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imb_back_detail_post_forum"
            app:layout_constraintTop_toBottomOf="@+id/iv_photo_detail_post_forum" />

        <ImageButton
            android:id="@+id/btn_showCommentFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/container_layout_info_user_forum_detail"
            app:layout_constraintStart_toEndOf="@+id/container_layout_info_user_forum_detail"
            app:layout_constraintTop_toTopOf="@+id/container_layout_info_user_forum_detail" />

        <LinearLayout
            android:id="@+id/container_layout_info_user_forum_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/tv_desc_detail_post_forum"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_detail_post_forum">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_profile_detail_post_forum"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_profile" />

            <TextView
                android:id="@+id/tv_username_detail_post_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Username"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

