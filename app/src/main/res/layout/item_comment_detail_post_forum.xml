<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile_person_comment_psot_forum"
        android:layout_width="30dp"
        android:layout_margin="10dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/avatar_profile" />

    <TextView
        android:id="@+id/tv_profile_username_detail_post_forum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Username"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/civ_profile_person_comment_psot_forum"
        app:layout_constraintStart_toEndOf="@id/civ_profile_person_comment_psot_forum"
        app:layout_constraintTop_toTopOf="@id/civ_profile_person_comment_psot_forum" />

    <TextView
        android:id="@+id/tv_desc_comment_user_post_forum"
        android:layout_width="0dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/dummy_desc_detail"
        app:layout_constraintStart_toStartOf="@id/tv_profile_username_detail_post_forum"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_username_detail_post_forum" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        android:background="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_comment_user_post_forum" />

</androidx.constraintlayout.widget.ConstraintLayout>